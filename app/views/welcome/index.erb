<!DOCTYPE html>
<html>

  <head>
  <style>
    table, th , td  {
      border: 1px solid blue;
      border-collapse: collapse;
      padding: 5px;
    }
    table tr:nth-child(odd) {
      background-color: #f1f1f1;
    }
    table tr:nth-child(even) {
      background-color: #ffffff;
    }
  </style>
    <meta charset="utf-8" />
    <title>Project 3</title>
    
    <script>
    $(document).ready(function () {
    var id = 1;
    setInterval(function(){
    $.getJSON('/products/'+id,function (json) {
      var tr=[];
      for (var i = 0; i < json.length; i++) {
        tr.push('<tr>');
        tr.push("<td>" + json[i].age + "</td>");
        tr.push("<td>" + json[i].sex + "</td>");
        tr.push("<td>" + json[i].race + "</td>");
        tr.push("<td>" + json[i].length_of_stay + "</td>");
        tr.push("<td>" + json[i].stay_indicator + "</td>");
        tr.push("<td>" + json[i].total_charges+ "</td>");
        tr.push("<td>" + json[i].id+ "</td>");
        tr.push('</tr>');

      }
      $('table').append($(tr.join('')));
      id++;
      console.log(json)
    },500); 
    });
    });
    
    </script>
  </head>

  <body>
     <div >
        <div >
          
         <table>
         <thead>
         <tr>
            <th>AGE</th>
            <th>SEX</th>
            <th>RACE</th>
            <th>length_of_stay</th>
            <th>stay_indicator</th>
            <th>total_charges</th>
            <th>total_charges</th>
         </tr>
         </thead>
         
        </table>
        </div>
    </div>
  </body>

</html>
