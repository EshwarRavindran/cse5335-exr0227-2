<!DOCTYPE html>
<html ng-app="myApp">

  <head>
  <style>
    table, th , td  {
      border: 1px solid blue;
      border-collapse: collapse;
      padding: 5px;
    }
    table tr:nth-child(odd) {
      background-color: #f1f1f1;
    }
    table tr:nth-child(even) {
      background-color: #ffffff;
    }
    .animate-enter { 
      -webkit-animation: enter 600ms cubic-bezier(0.390, 0.575, 0.565, 1.000);
      animation: enter 600ms cubic-bezier(0.390, 0.575, 0.565, 1.000);
      display: block;
      position: relative;
    }
    /* The finishing CSS styles for the enter animation */
    .animate-leave { 
      -webkit-animation: leave 600ms cubic-bezier(0.390, 0.575, 0.565, 1.000);
      animation: leave 600ms cubic-bezier(0.390, 0.575, 0.565, 1.000);
      display: block;
      position: relative;
    } 
  </style>
    <meta charset="utf-8" />
    <title>Project 3</title>
    <script>document.write('<base href="' + document.location + '" />');</script>
    <link rel="stylesheet" href="style.css" />
    <script data-require="angular.js@1.3.x" src="https://code.angularjs.org/1.3.15/angular.js" data-semver="1.3.15"></script>
    
    <script data-require="angular.js@1.3.x" src="//code.angularjs.org/1.3.15/angular-animate.js"></script>
    <script>
       var app = angular.module('myApp', ['ngAnimate']);
       app.controller('myController', ['$scope', '$http', '$interval',function($scope, $http, $interval) {
       var id = 1;
       $scope.items = [];
        $interval(function(){
          $http.get('/products/'+id+'.json').success(function(data) {
              $scope.convert = data;
              console.log($scope.convert)
              ///$scope.items = angular.extend({},$scope.convert);
              $scope.items.push($scope.convert);
              id++;
              if ($scope.items.length > 20)
                $scope.items.shift();
              $scope.items.splice(id, 1);
          });
        },500);
      
  
      }]);
    
    </script>
  </head>

  <body ng-controller="myController">
     <div ng-app="myApp">
        <div ng-controller="myController">
          
        <table> 
          <tr>
          <th>AGE</th>
          <th>SEX</th>
          <th>RACE</th>
          <th>LENGTH_OF_STAY</th>
          <th>STAY_INDICATOR</th>
          <th>TOTAL_CHARGES</th>
          <th>ID</th>
          </tr>
          <!-- <tr ng-repeat="item in items">
            <td ng-repeat="(key, val) in item track by $index">{{key}}:{{val}}</td>
          </tr> -->
          <tr ng-animate="'animate'" ng-repeat="item in items track by $index"> 
          <td>{{ item["age"]}}</td>

          <td>{{ item["sex"]}}</td>
          
          <td>{{ item["race"]}}</td>
          
          <td>{{ item["length_of_stay"]}}</td>
          
          <td>{{ item["stay_indicator"]}}</td>

          <td>{{ item["total_charges"]}}</td>
          
          <td>{{ item["id"]}}</td>
  
          </tr>
        </table>
        </div>
    </div>
  </body>

</html>
